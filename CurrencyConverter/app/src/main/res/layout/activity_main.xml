<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_cad"
        android:layout_width="232dp"
        android:layout_height="38dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_vertical"
        android:text="CAD: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_try" />

    <TextView
        android:id="@+id/tv_try"
        android:layout_width="229dp"
        android:layout_height="37dp"
        android:layout_marginBottom="23dp"
        android:gravity="center_vertical"
        android:text="TRY: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_cad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jpy" />

    <TextView
        android:id="@+id/tv_jpy"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_marginBottom="17dp"
        android:gravity="center_vertical"
        android:text="JPY: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_try"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_usd" />

    <TextView
        android:id="@+id/tv_usd"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:layout_marginBottom="19dp"
        android:gravity="center_vertical"
        android:text="USD: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_jpy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chf" />

    <TextView
        android:id="@+id/tv_chf"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="27dp"
        android:gravity="center_vertical"
        android:text="CHF: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_usd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="37dp"
        android:onClick="getRates"
        android:text="GET RATES"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cad" />
</android.support.constraint.ConstraintLayout>