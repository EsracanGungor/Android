<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Smsgonderme">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <EditText
        android:id="@+id/et_sms_mesaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mesaj giriniz"
        android:height="175dp"
        android:gravity="start"
        android:textAlignment="gravity"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/et_sms_telefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numarayi giriniz"
        android:inputType="phone"/>
        <Button
            android:id="@+id/btn_sms_gonder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:background="@color/blueviolet"
            android:text="Sms gÃ¶nder"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>