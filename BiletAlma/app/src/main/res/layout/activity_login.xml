<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginTop="300dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logok11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        >
        <EditText
            android:id="@+id/et_main_kullaniciadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:hint="Kullanici adi"
            android:text="esragungor@gmail.com"
            />

        <EditText
            android:id="@+id/et_main_sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre"
            android:text="123456"/>
    <Button
    android:id="@+id/btn_main_giris"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/colorWhite"
    android:text="Giriş"
    android:background="@color/black"
    />
<Button
    android:id="@+id/btn_main_kayitol"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Kayit Ol"
    android:textColor="@color/colorWhite"
    android:layout_marginTop="50dp"
    android:background="@color/black"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Geleceği Yazan Kadınlar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        />

</android.support.constraint.ConstraintLayout>